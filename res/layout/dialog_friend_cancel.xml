<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="260dip"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_corner_rectangle"
    android:orientation="vertical"
    android:padding="5dip" >

    <Button
        android:id="@+id/dialog_friend_cancel_button_goback"
        android:layout_width="50dip"
        android:layout_height="30dip"
        android:layout_marginLeft="5dip"
        android:layout_marginTop="5dip"
        android:background="#00000000"
        android:gravity="center|top"
        android:text="@string/go_back"
        android:textColor="#ff999999"
        android:textSize="15sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginBottom="3dip"
        android:background="#ffd6d6d6" />

    <Button
        android:id="@+id/dialog_friend_cancel_button_confirm"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dialog_friend_cancel_button_heigth"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/dialog_friend_cancel_button_margin_bottom"
        android:layout_marginLeft="@dimen/dialog_friend_cancel_button_margin_left"
        android:layout_marginRight="@dimen/dialog_friend_cancel_button_margin_right"
        android:layout_marginTop="@dimen/dialog_friend_cancel_button_margin_top"
        android:background="@drawable/red_button_selector"
        android:text="@string/dialog_friend_cancel"
        android:textColor="#ffffffff"
        android:textSize="16sp" />

</LinearLayout>