<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_corner_rectangle"
    android:padding="5dip" >

    <Button
        android:id="@+id/dialog_enquiry_detail_button_goback"
        android:layout_width="50dip"
        android:layout_height="30dip"
        android:layout_marginLeft="5dip"
        android:layout_marginTop="5dip"
        android:background="#00000000"
        android:gravity="center|top"
        android:text="@string/go_back"
        android:textColor="#ff999999"
        android:textSize="15sp" />

    <View
        android:id="@+id/dialog_enquiry_detail_image_divider"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/dialog_enquiry_detail_button_goback"
        android:src="#ffd6d6d6" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dialog_enquiry_detail_image_divider"
        android:layout_margin="15dip"
        android:background="#00000000"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/dialog_enquiry_detail_edit_enquiry"
            android:layout_width="match_parent"
            android:layout_height="100dip"
            android:background="@drawable/input_corner_rectangle"
            android:gravity="left|top"
            android:inputType="text"
            android:textColor="#ff222222"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dip"
            android:layout_marginTop="10dip"
            android:background="#00000000"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/dialog_enquiry_detail_button_send"
                android:layout_width="0dip"
                android:layout_height="40dip"
                android:layout_marginRight="10dip"
                android:layout_weight="1"
                android:background="@drawable/red_button_selector"
                android:text="@string/send"
                android:textColor="#ffffffff"
                android:textSize="16sp" />

            <Button
                android:id="@+id/dialog_enquiry_detail_button_cancle"
                android:layout_width="0dip"
                android:layout_height="40dip"
                android:layout_marginLeft="10dip"
                android:layout_weight="1"
                android:background="@drawable/button_corner_rectangle_selector"
                android:text="@string/cancle"
                android:textColor="#ff999999"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>