<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:padding="5dip"
              android:orientation="vertical">

    <RelativeLayout
            android:id="@+id/enterprise_list_item_company_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

        <TextView
                android:id="@+id/enterprise_list_item_company"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center|left"
                android:paddingRight="21dip"
                android:text="@string/common_word"
                android:textColor="#ff333333"
                android:textSize="15sp"/>

        <ImageView
                android:id="@+id/enterprise_list_item_member"
                android:layout_width="20dip"
                android:layout_height="10dip"
                android:layout_marginTop="5dip"
                android:layout_alignRight="@id/enterprise_list_item_company"/>
        <TextView
                android:id="@+id/enterprise_list_text_city_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ff777777"
                android:textSize="@dimen/product_list_other_text_size"
                android:layout_alignParentRight="true"
                />
    </RelativeLayout>

    <TextView
            android:id="@+id/enterprise_list_item_keyword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center|left"
            android:text="@string/enterprise_list_keyword"
            android:textColor="#ff777777"
            android:textSize="@dimen/product_list_other_text_size"/>

</LinearLayout>
