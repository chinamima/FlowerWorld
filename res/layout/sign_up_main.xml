<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/page_background" >

    <RelativeLayout
        android:id="@+id/banner_layout"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/banner_height"
        android:layout_alignParentTop="true" >
    </RelativeLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bottom_btn_layout"
        android:layout_below="@id/banner_layout"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="5dip"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/sign_up_image"
                android:layout_width="fill_parent"
                android:layout_height="150dip"
                android:layout_marginBottom="@dimen/signup_item_margin_bottom"
                android:layout_marginTop="10dip"
                android:background="#dcdcdc" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/signup_item_margin_bottom"
                android:layout_marginTop="@dimen/signup_item_margin_top" >

                <TextView
                    android:id="@+id/sign_up_text_username"
                    android:layout_width="@dimen/signup_left_text_width"
                    android:layout_height="@dimen/signup_left_text_height"
                    android:gravity="center_vertical"
                    android:text="@string/signup_username"
                    android:textColor="#ff000000"
                    android:textSize="@dimen/signup_left_text_size" />

                <EditText
                    android:id="@+id/sign_up_edit_username"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/signup_right_edit_height"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="@dimen/signup_right_edit_margin_left"
                    android:layout_toRightOf="@id/sign_up_text_username"
                    android:background="@drawable/input_corner_rectangle"
                    android:hint="@string/signup_input_hint_word"
                    android:maxLength="15" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/sign_up_edit_username"
                    android:layout_below="@id/sign_up_edit_username"
                    android:text="@string/signup_username_remarks"
                    android:textSize="13sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/signup_item_margin_bottom"
                android:layout_marginTop="@dimen/signup_item_margin_top" >

                <TextView
                    android:id="@+id/sign_up_text_password"
                    android:layout_width="@dimen/signup_left_text_width"
                    android:layout_height="@dimen/signup_left_text_height"
                    android:gravity="center_vertical"
                    android:text="@string/signup_password"
                    android:textColor="#ff000000"
                    android:textSize="@dimen/signup_left_text_size" />

                <EditText
                    android:id="@+id/sign_up_edit_password"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/signup_right_edit_height"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="@dimen/signup_right_edit_margin_left"
                    android:layout_toRightOf="@id/sign_up_text_password"
                    android:background="@drawable/input_corner_rectangle"
                    android:hint="@string/signup_input_hint_word"
                    android:inputType="textPassword"
                    android:maxLength="15" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/sign_up_edit_password"
                    android:layout_below="@id/sign_up_edit_password"
                    android:text="@string/signup_password_remarks"
                    android:textSize="13sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/signup_item_margin_bottom"
                android:layout_marginTop="@dimen/signup_item_margin_top" >

                <TextView
                    android:id="@+id/sign_up_text_password_again"
                    android:layout_width="@dimen/signup_left_text_width"
                    android:layout_height="@dimen/signup_left_text_height"
                    android:gravity="center_vertical"
                    android:text="@string/signup_password_again"
                    android:textColor="#ff000000"
                    android:textSize="@dimen/signup_left_text_size" />

                <EditText
                    android:id="@+id/sign_up_edit_password_again"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/signup_right_edit_height"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="@dimen/signup_right_edit_margin_left"
                    android:layout_toRightOf="@id/sign_up_text_password_again"
                    android:background="@drawable/input_corner_rectangle"
                    android:hint="@string/signup_input_hint_word"
                    android:inputType="textPassword"
                    android:maxLength="15" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/signup_item_margin_bottom"
                android:layout_marginTop="@dimen/signup_item_margin_top" >

                <TextView
                    android:id="@+id/sign_up_text_email"
                    android:layout_width="@dimen/signup_left_text_width"
                    android:layout_height="@dimen/signup_left_text_height"
                    android:gravity="center_vertical"
                    android:text="@string/signup_email"
                    android:textColor="#ff000000"
                    android:textSize="@dimen/signup_left_text_size" />

                <EditText
                    android:id="@+id/sign_up_edit_email"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/signup_right_edit_height"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="@dimen/signup_right_edit_margin_left"
                    android:layout_toRightOf="@id/sign_up_text_email"
                    android:background="@drawable/input_corner_rectangle"
                    android:hint="@string/signup_input_hint_word"
                    android:inputType="textEmailAddress" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/signup_item_margin_bottom"
                android:layout_marginTop="@dimen/signup_item_margin_top" >

                <TextView
                    android:id="@+id/signup_look_user_agreement_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dip"
                    android:text="@string/signup_look_user_agreement"
                    android:textColor="#ffff0000"
                    android:textSize="15sp" />

                <CheckBox
                    android:id="@+id/signup_consent_agreement_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/signup_look_user_agreement_text"
                    android:checked="true"
                    android:text="@string/signup_consent_agreement"
                    android:textColor="#ffbcbcbc" />
            </RelativeLayout>

            <Button
                android:id="@+id/sign_up_next"
                android:layout_width="fill_parent"
                android:layout_height="50dip"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:background="@drawable/red_button_selector"
                android:text="@string/signup_next"
                android:textColor="#ffffffff"
                android:textSize="17sp" />
        </LinearLayout>
    </ScrollView>

    <!-- <include
        android:id="@id/bottom_btn_layout"
        layout="@layout/bottom_image_text_button" /> -->

</RelativeLayout>