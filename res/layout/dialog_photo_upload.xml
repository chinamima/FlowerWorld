<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="260dip"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_corner_rectangle"
    android:orientation="vertical"
    android:padding="5dip" >

    <Button
        android:id="@+id/dialog_photo_upload_button_goback"
        android:layout_width="50dip"
        android:layout_height="30dip"
        android:layout_marginLeft="5dip"
        android:layout_marginTop="5dip"
        android:background="#00000000"
        android:gravity="center|top"
        android:text="@string/go_back"
        android:textColor="#ff999999"
        android:textSize="15sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginBottom="3dip"
        android:background="#ffd6d6d6" />

    <com.flowerworld.app.ui.widget.PhotoSelect
        android:id="@+id/dialog_photo_upload_widget_photo_select_1"
        android:layout_width="@dimen/widget_photo_select_width"
        android:layout_height="@dimen/widget_photo_select_height" />

    <com.flowerworld.app.ui.widget.PhotoSelect
        android:id="@+id/dialog_photo_upload_widget_photo_select_2"
        android:layout_width="@dimen/widget_photo_select_width"
        android:layout_height="@dimen/widget_photo_select_height" />

    <com.flowerworld.app.ui.widget.PhotoSelect
        android:id="@+id/dialog_photo_upload_widget_photo_select_3"
        android:layout_width="@dimen/widget_photo_select_width"
        android:layout_height="@dimen/widget_photo_select_height" />

    <Button
        android:id="@+id/dialog_photo_upload_button_upload"
        android:layout_width="100dip"
        android:layout_height="40dip"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dip"
        android:background="@drawable/red_button_selector"
        android:text="@string/dialog_photo_upload_text"
        android:textColor="#ffffffff"
        android:textSize="16sp" />

</LinearLayout>