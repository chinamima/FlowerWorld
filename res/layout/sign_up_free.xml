<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/page_background" >

    <RelativeLayout
        android:id="@+id/banner_layout"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/banner_height"
        android:layout_alignParentTop="true" >
    </RelativeLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bottom_btn_layout"
        android:layout_below="@id/banner_layout"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="5dip"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="@string/signup_free_text"
                android:textColor="#ff000000"
                android:textSize="@dimen/signup_free_left_text_size" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/signup_free_item_margin_bottom"
                android:layout_marginTop="@dimen/signup_free_item_margin_top" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/signup_free_left_text_height"
                    android:gravity="center_vertical"
                    android:text="@string/signup_free_must"
                    android:textColor="#ffff0000"
                    android:textSize="@dimen/signup_free_left_text_size" />

                <TextView
                    android:id="@+id/sign_up_free_text_username"
                    android:layout_width="@dimen/signup_free_left_text_width"
                    android:layout_height="@dimen/signup_free_left_text_height"
                    android:layout_marginLeft="@dimen/signup_free_left_text_margin_left"
                    android:gravity="center_vertical"
                    android:text="@string/signup_free_username"
                    android:textColor="#ff000000"
                    android:textSize="@dimen/signup_free_left_text_size" />

                <TextView
                    android:id="@+id/sign_up_free_edit_username"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/signup_free_right_edit_height"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="@dimen/signup_free_right_edit_margin_left"
                    android:layout_toRightOf="@id/sign_up_free_text_username"
                    android:gravity="center_vertical"
                    android:text="@string/signup_free_username"
                    android:textColor="#ff000000"
                    android:textSize="@dimen/signup_free_left_text_size" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/signup_free_item_margin_bottom"
                android:layout_marginTop="@dimen/signup_free_item_margin_top" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/signup_free_left_text_height"
                    android:gravity="center_vertical"
                    android:text="@string/signup_free_must"
                    android:textColor="#ffff0000"
                    android:textSize="@dimen/signup_free_left_text_size" />

                <TextView
                    android:id="@+id/sign_up_free_text_real_name"
                    android:layout_width="@dimen/signup_free_left_text_width"
                    android:layout_height="@dimen/signup_free_left_text_height"
                    android:layout_marginLeft="@dimen/signup_free_left_text_margin_left"
                    android:gravity="center_vertical"
                    android:text="@string/signup_free_real_name"
                    android:textColor="#ff000000"
                    android:textSize="@dimen/signup_free_left_text_size" />

                <EditText
                    android:id="@+id/sign_up_free_edit_real_name"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/signup_free_right_edit_height"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="@dimen/signup_free_right_edit_margin_left"
                    android:layout_toRightOf="@id/sign_up_free_text_real_name"
                    android:background="@drawable/input_corner_rectangle"
                    android:hint=""
                    android:maxLength="15" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/signup_free_item_margin_bottom"
                android:layout_marginTop="@dimen/signup_free_item_margin_top" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/signup_free_left_text_height"
                    android:gravity="center_vertical"
                    android:text="@string/signup_free_must"
                    android:textColor="#ffff0000"
                    android:textSize="@dimen/signup_free_left_text_size" />

                <TextView
                    android:id="@+id/sign_up_free_text_gender"
                    android:layout_width="@dimen/signup_free_left_text_width"
                    android:layout_height="@dimen/signup_free_left_text_height"
                    android:layout_marginLeft="@dimen/signup_free_left_text_margin_left"
                    android:gravity="center_vertical"
                    android:text="@string/signup_free_gender"
                    android:textColor="#ff000000"
                    android:textSize="@dimen/signup_free_left_text_size" />

                <com.flowerworld.app.ui.widget.SingleSelectButton
                    android:id="@+id/sign_up_free_button_gender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="@dimen/signup_free_right_edit_margin_left"
                    android:layout_toRightOf="@id/sign_up_free_text_gender"
                    android:background="#00000000" >
                </com.flowerworld.app.ui.widget.SingleSelectButton>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/signup_free_item_margin_bottom"
                android:layout_marginTop="@dimen/signup_free_item_margin_top" >

                <TextView
                    android:id="@+id/sign_up_free_text_verification"
                    android:layout_width="@dimen/signup_free_left_text_width"
                    android:layout_height="@dimen/signup_free_left_text_height"
                    android:layout_marginLeft="@dimen/signup_free_left_text_margin_left"
                    android:gravity="center_vertical"
                    android:text="@string/signup_free_verification"
                    android:textColor="#ff000000"
                    android:textSize="@dimen/signup_free_left_text_size" />

                <EditText
                    android:id="@+id/sign_up_free_edit_verification"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/signup_free_right_edit_height"
                    android:layout_marginLeft="@dimen/signup_free_right_edit_margin_left"
                    android:layout_toLeftOf="@+id/sign_up_free_button_verification"
                    android:layout_toRightOf="@id/sign_up_free_text_verification"
                    android:background="@drawable/input_corner_rectangle"
                    android:hint=""
                    android:maxLength="15" />

                <Button
                    android:id="@+id/sign_up_free_button_verification"
                    android:layout_width="@dimen/signup_free_right_button_width"
                    android:layout_height="@dimen/signup_free_right_button_height"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="@dimen/signup_free_right_button_margin_left"
                    android:background="@drawable/blue_button_selector"
                    android:text="@string/signup_free_verification_button"
                    android:textColor="#ff777777"
                    android:textSize="@dimen/signup_free_right_button_text_size" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/signup_free_item_margin_bottom"
                android:layout_marginTop="@dimen/signup_free_item_margin_top" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/signup_free_left_text_height"
                    android:gravity="center_vertical"
                    android:text="@string/signup_free_must"
                    android:textColor="#ffff0000"
                    android:textSize="@dimen/signup_free_left_text_size" />

                <TextView
                    android:id="@+id/sign_up_free_text_phone_1"
                    android:layout_width="@dimen/signup_free_left_text_width"
                    android:layout_height="@dimen/signup_free_left_text_height"
                    android:layout_marginLeft="@dimen/signup_free_left_text_margin_left"
                    android:gravity="center_vertical"
                    android:text="@string/signup_free_phone_1"
                    android:textColor="#ff000000"
                    android:textSize="@dimen/signup_free_left_text_size" />

                <EditText
                    android:id="@+id/sign_up_free_edit_phone_1"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/signup_free_right_edit_height"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="@dimen/signup_free_right_edit_margin_left"
                    android:layout_toRightOf="@id/sign_up_free_text_phone_1"
                    android:background="@drawable/input_corner_rectangle"
                    android:hint=""
                    android:inputType="phone"
                    android:maxLength="15" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/signup_free_item_margin_bottom"
                android:layout_marginTop="@dimen/signup_free_item_margin_top" >

                <TextView
                    android:id="@+id/sign_up_free_text_phone_2"
                    android:layout_width="@dimen/signup_free_left_text_width"
                    android:layout_height="@dimen/signup_free_left_text_height"
                    android:layout_marginLeft="@dimen/signup_free_left_text_margin_left"
                    android:gravity="center_vertical"
                    android:text="@string/signup_free_phone_2"
                    android:textColor="#ff000000"
                    android:textSize="@dimen/signup_free_left_text_size" />

                <EditText
                    android:id="@+id/sign_up_free_edit_phone_2"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/signup_free_right_edit_height"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="@dimen/signup_free_right_edit_margin_left"
                    android:layout_toRightOf="@id/sign_up_free_text_phone_2"
                    android:background="@drawable/input_corner_rectangle"
                    android:hint=""
                    android:inputType="phone"
                    android:maxLength="15" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/signup_free_item_margin_bottom"
                android:layout_marginTop="@dimen/signup_free_item_margin_top" >

                <TextView
                    android:id="@+id/sign_up_free_text_tel"
                    android:layout_width="@dimen/signup_free_left_text_width"
                    android:layout_height="@dimen/signup_free_left_text_height"
                    android:layout_marginLeft="@dimen/signup_free_left_text_margin_left"
                    android:gravity="center_vertical"
                    android:text="@string/signup_free_tel"
                    android:textColor="#ff000000"
                    android:textSize="@dimen/signup_free_left_text_size" />

                <EditText
                    android:id="@+id/sign_up_free_edit_tel"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/signup_free_right_edit_height"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="@dimen/signup_free_right_edit_margin_left"
                    android:layout_toRightOf="@id/sign_up_free_text_tel"
                    android:background="@drawable/input_corner_rectangle"
                    android:hint=""
                    android:maxLength="15" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/signup_free_item_margin_bottom"
                android:layout_marginTop="@dimen/signup_free_item_margin_top" >

                <TextView
                    android:id="@+id/sign_up_free_text_fax"
                    android:layout_width="@dimen/signup_free_left_text_width"
                    android:layout_height="@dimen/signup_free_left_text_height"
                    android:layout_marginLeft="@dimen/signup_free_left_text_margin_left"
                    android:gravity="center_vertical"
                    android:text="@string/signup_free_fax"
                    android:textColor="#ff000000"
                    android:textSize="@dimen/signup_free_left_text_size" />

                <EditText
                    android:id="@+id/sign_up_free_edit_fax"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/signup_free_right_edit_height"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="@dimen/signup_free_right_edit_margin_left"
                    android:layout_toRightOf="@id/sign_up_free_text_fax"
                    android:background="@drawable/input_corner_rectangle"
                    android:hint=""
                    android:maxLength="15" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/signup_free_item_margin_bottom"
                android:layout_marginTop="@dimen/signup_free_item_margin_top" >

                <TextView
                    android:id="@+id/sign_up_free_text_qq"
                    android:layout_width="@dimen/signup_free_left_text_width"
                    android:layout_height="@dimen/signup_free_left_text_height"
                    android:layout_marginLeft="@dimen/signup_free_left_text_margin_left"
                    android:gravity="center_vertical"
                    android:text="@string/signup_free_qq"
                    android:textColor="#ff000000"
                    android:textSize="@dimen/signup_free_left_text_size" />

                <EditText
                    android:id="@+id/sign_up_free_edit_qq"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/signup_free_right_edit_height"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="@dimen/signup_free_right_edit_margin_left"
                    android:layout_toRightOf="@id/sign_up_free_text_qq"
                    android:background="@drawable/input_corner_rectangle"
                    android:hint=""
                    android:maxLength="15" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/signup_free_item_margin_bottom"
                android:layout_marginTop="@dimen/signup_free_item_margin_top" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/signup_free_left_text_height"
                    android:gravity="center_vertical"
                    android:text="@string/signup_free_must"
                    android:textColor="#ffff0000"
                    android:textSize="@dimen/signup_free_left_text_size" />

                <TextView
                    android:id="@+id/sign_up_free_text_location"
                    android:layout_width="@dimen/signup_free_left_text_width"
                    android:layout_height="@dimen/signup_free_left_text_height"
                    android:layout_marginLeft="@dimen/signup_free_left_text_margin_left"
                    android:gravity="center_vertical"
                    android:text="@string/signup_free_location"
                    android:textColor="#ff000000"
                    android:textSize="@dimen/signup_free_left_text_size" />

                <Button
                    android:id="@+id/sign_up_free_button_location"
                    android:layout_width="@dimen/signup_free_right_button_width"
                    android:layout_height="@dimen/signup_free_right_button_height"
                    android:layout_marginLeft="@dimen/signup_free_right_button_margin_left"
                    android:layout_toRightOf="@id/sign_up_free_text_location"
                    android:background="@drawable/blue_button_selector"
                    android:text="@string/signup_free_clk_select"
                    android:textColor="#ff777777"
                    android:textSize="@dimen/signup_free_right_button_text_size" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/signup_free_item_margin_bottom"
                android:layout_marginTop="@dimen/signup_free_item_margin_top" >

                <TextView
                    android:id="@+id/sign_up_free_text_pecific_address"
                    android:layout_width="@dimen/signup_free_left_text_width"
                    android:layout_height="@dimen/signup_free_left_text_height"
                    android:layout_marginLeft="@dimen/signup_free_left_text_margin_left"
                    android:gravity="center_vertical"
                    android:text="@string/signup_free_specific_address"
                    android:textColor="#ff000000"
                    android:textSize="@dimen/signup_free_left_text_size" />

                <EditText
                    android:id="@+id/sign_up_free_edit_pecific_address"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/signup_free_right_edit_height"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="@dimen/signup_free_right_edit_margin_left"
                    android:layout_toRightOf="@id/sign_up_free_text_pecific_address"
                    android:background="@drawable/input_corner_rectangle"
                    android:hint=""
                    android:maxLength="15" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/signup_free_item_margin_bottom"
                android:layout_marginTop="@dimen/signup_free_item_margin_top" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/signup_free_left_text_height"
                    android:gravity="center_vertical"
                    android:text="@string/signup_free_must"
                    android:textColor="#ffff0000"
                    android:textSize="@dimen/signup_free_left_text_size" />

                <TextView
                    android:id="@+id/sign_up_free_text_introduction"
                    android:layout_width="@dimen/signup_free_left_text_width"
                    android:layout_height="@dimen/signup_free_left_text_height"
                    android:layout_marginLeft="@dimen/signup_free_left_text_margin_left"
                    android:gravity="center_vertical"
                    android:text="@string/signup_free_introduction"
                    android:textColor="#ff000000"
                    android:textSize="@dimen/signup_free_left_text_size" />

                <EditText
                    android:id="@+id/sign_up_free_edit_introduction"
                    android:layout_width="wrap_content"
                    android:layout_height="100dip"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="@dimen/signup_free_right_edit_margin_left"
                    android:layout_toRightOf="@id/sign_up_free_text_introduction"
                    android:background="@drawable/input_corner_rectangle"
                    android:gravity="left|top"
                    android:hint=""
                    android:maxLength="15" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/sign_up_free_edit_introduction"
                    android:layout_below="@id/sign_up_free_edit_introduction"
                    android:text="@string/signup_free_introduction_remarks"
                    android:textColor="#999999"
                    android:textSize="13sp" />
            </RelativeLayout>

            <Button
                android:id="@+id/sign_up_free_finish"
                android:layout_width="fill_parent"
                android:layout_height="45dip"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:layout_marginTop="10dip"
                android:background="@drawable/red_button_selector"
                android:gravity="center"
                android:text="@string/signup_free_finish"
                android:textColor="#ffffffff"
                android:textSize="19sp" />
        </LinearLayout>
    </ScrollView>

    <!-- <include
        android:id="@id/bottom_btn_layout"
        layout="@layout/bottom_image_text_button" /> -->

</RelativeLayout>