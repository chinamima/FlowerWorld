<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/page_background" >

    <RelativeLayout
        android:id="@+id/banner_layout"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/banner_height"
        android:layout_alignParentTop="true" >
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/banner_layout"
        android:layout_margin="10dip"
        android:background="@drawable/stroke_corner_rectangle" >

        <ImageView
            android:id="@+id/friend_add_detail_image_header"
            android:layout_width="40dip"
            android:layout_height="40dip" />

        <LinearLayout
            android:id="@+id/friend_add_detail_layout_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:layout_toRightOf="@id/friend_add_detail_image_header"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dip"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/friend_add_detail_text_name"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|left"
                    android:text="@string/common_word"
                    android:textColor="#ff000000"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/friend_add_detail_text_job"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|left"
                    android:text="@string/common_word"
                    android:layout_marginLeft="5dip"
                    android:textColor="#ffa4a4a4"
                    android:textSize="@dimen/friend_detail_text_size" />
            </LinearLayout>

            <TextView
                android:id="@+id/friend_add_detail_text_location"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/friend_detail_text_height"
                android:gravity="center_vertical|left"
                android:text="@string/common_word"
                android:textColor="#ffa4a4a4"
                android:textSize="@dimen/friend_detail_text_size" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/friend_detail_text_height"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/friend_add_detail_text_company"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|left"
                    android:text="@string/common_word"
                    android:textColor="#ffa4a4a4"
                    android:textSize="@dimen/friend_detail_text_size" />

                <ImageView
                    android:id="@+id/friend_add_detail_image_member_type"
                    android:layout_width="20dip"
                    android:layout_height="10dip"
                    android:layout_marginLeft="2dip"
                    android:layout_marginTop="1dip" />
            </LinearLayout>

            <TextView
                android:id="@+id/friend_add_detail_text_mobile"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/friend_detail_text_height"
                android:gravity="center_vertical|left"
                android:text="@string/common_word"
                android:textColor="#ffa4a4a4"
                android:textSize="@dimen/friend_detail_text_size" />

            <TextView
                android:id="@+id/friend_add_detail_text_telephone"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/friend_detail_text_height"
                android:gravity="center_vertical|left"
                android:text="@string/common_word"
                android:textColor="#ffa4a4a4"
                android:textSize="@dimen/friend_detail_text_size" />

            <TextView
                android:id="@+id/friend_add_detail_text_fax"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/friend_detail_text_height"
                android:gravity="center_vertical|left"
                android:text="@string/common_word"
                android:textColor="#ffa4a4a4"
                android:textSize="@dimen/friend_detail_text_size" />
        </LinearLayout>
    </RelativeLayout>

    <Button
        android:id="@+id/friend_add_detail_button_send_message"
        android:layout_width="match_parent"
        android:layout_height="@dimen/friend_detail_button_height"
        android:layout_alignParentBottom="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="30dip"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:background="@drawable/white_gray_button_corner_rectangle_selector"
        android:text="@string/friend_add_send_message"
        android:textColor="#ff5a5a5a"
        android:textSize="18sp" />

    <Button
        android:id="@+id/friend_add_detail_button_collect_enterprise"
        android:layout_width="match_parent"
        android:layout_height="@dimen/friend_detail_button_height"
        android:layout_above="@id/friend_add_detail_button_send_message"
        android:layout_centerVertical="true"
        android:layout_marginBottom="5dip"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:background="@drawable/red_button_selector"
        android:text="@string/only_collect_enterprise"
        android:textColor="#ffffffff"
        android:textSize="18sp" />

    <Button
        android:id="@+id/friend_add_detail_button_add_relation"
        android:layout_width="match_parent"
        android:layout_height="@dimen/friend_detail_button_height"
        android:layout_above="@id/friend_add_detail_button_collect_enterprise"
        android:layout_centerVertical="true"
        android:layout_marginBottom="5dip"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:background="@drawable/red_button_selector"
        android:text="@string/friend_add_relation"
        android:textColor="#ffffffff"
        android:textSize="18sp" />

</RelativeLayout>