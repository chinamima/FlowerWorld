<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/widget_photo_select_width"
    android:layout_height="@dimen/widget_photo_select_height"
    android:orientation="horizontal"
    android:padding="5dip" >

    <ImageButton
        android:id="@+id/widget_photo_select_image"
        android:layout_width="@dimen/widget_photo_select_image_width"
        android:layout_height="@dimen/widget_photo_select_image_height"
        android:background="@drawable/widget_photo_select_click"
        android:scaleType="centerInside" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dip"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/widget_photo_select_edit_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/widget_photo_select_title_height"
            android:background="@drawable/input_corner_rectangle"
            android:gravity="center_vertical"
            android:hint="@string/widget_photo_select_title_hint"
            android:inputType="text"
            android:singleLine="true"
            android:textColor="#ff8d8d8d"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/widget_photo_select_text_delete"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/widget_photo_select_delete_height"
            android:layout_margin="10dip"
            android:gravity="center"
            android:text="@string/widget_photo_select_delete"
            android:textColor="#ffff0000"
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>