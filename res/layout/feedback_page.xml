<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <RelativeLayout
            android:id="@+id/banner_layout"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/banner_height"
            android:layout_alignParentTop="true">
    </RelativeLayout>

    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp">

        <EditText
                android:id="@+id/feedback_edit_message"
                android:layout_width="fill_parent"
                android:layout_height="150dp"
                android:background="@drawable/input_corner_rectangle"
                android:hint="您的反馈我们将在24小时内回复。"
                android:gravity="left|top"
                android:textSize="17sp"
                />

        <EditText
                android:id="@+id/feedback_edit_contact"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:background="@drawable/input_corner_rectangle"
                android:hint="请留下您的联系方式"
                android:gravity="left|center"
                android:textSize="17sp"
                android:layout_marginTop="10dp"
                />

        <Button
                android:id="@+id/feedback_button_send"
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:background="@drawable/red_button_selector"
                android:textSize="18sp"
                android:text="@string/send"
                android:textColor="#ffffffff"
                android:layout_marginTop="10dp"
                />

    </LinearLayout>
</LinearLayout>