<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="5dip" >

    <LinearLayout
        android:id="@+id/enterprise_list_item_image_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/enterprise_list_item_pic"
            android:layout_width="60dip"
            android:layout_height="60dip" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/enterprise_list_item_content_layout_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="5dip"
        android:layout_toRightOf="@id/enterprise_list_item_image_layout"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/enterprise_list_item_company_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/enterprise_list_item_company"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center|left"
                android:paddingRight="21dip"
                android:text="@string/common_word"
                android:textColor="#ff333333"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/enterprise_list_item_member"
                android:layout_width="20dip"
                android:layout_height="10dip"
                android:layout_marginTop="5dip"
                android:layout_alignRight="@id/enterprise_list_item_company" />
        </RelativeLayout>

        <TextView
            android:id="@+id/enterprise_list_item_keyword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center|left"
            android:text="@string/enterprise_list_keyword"
            android:textColor="#ff777777"
            android:textSize="@dimen/product_list_other_text_size" />

        <TextView
            android:id="@+id/enterprise_list_item_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center|left"
            android:text="@string/enterprise_list_location"
            android:textColor="#ff777777"
            android:textSize="@dimen/product_list_other_text_size" />

        <TextView
            android:id="@+id/enterprise_list_item_tel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center|left"
            android:text="@string/enterprise_list_tel"
            android:textColor="#ff777777"
            android:textSize="@dimen/product_list_other_text_size" />
    </LinearLayout>

</RelativeLayout>